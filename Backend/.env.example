# Configurações do Servidor
PORT=3001
NODE_ENV=development

# Configurações do Banco de Dados
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=sua_senha_aqui
DB_NAME=atma_aligner
DB_PORT=3306

# Configurações de JWT
JWT_SECRET=seu_jwt_secret_super_seguro_aqui
JWT_EXPIRE=24h

# Configurações de Email (Nodemailer)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=contato@atmaaligner.com.br
SMTP_PASS=sua_senha_de_app_aqui

# Configurações de Email - Remetente
EMAIL_FROM_ADDRESS=contato@atmaaligner.com.br
EMAIL_FROM_NAME=Atma Aligner

# Emails de Notificação
ADMIN_EMAIL=admin@atmaaligner.com.br
COMMERCIAL_EMAIL=comercial@atmaaligner.com.br

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Origins (separar com vírgulas)
ALLOWED_ORIGINS=http://localhost:3000,https://atmaaligner.com.br,https://www.atmaaligner.com.br

# Configurações de Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# API Externa - CEP
CEP_API_URL=https://viacep.com.br/ws

# Configurações de Log
LOG_LEVEL=info
LOG_FILE=logs/app.log